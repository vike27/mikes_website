<!DOCTYPE html>
<html>
<head>
  <title>MikesWebsite</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body data-spy="scroll" data-target="#navscroller">

<nav class="navbar navbar-inverse navbar-fixed-top" id="navtainer" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class="navbar-brand">Live 4 The Night E&P</a>
    </div>
   
    <div class="navbar-container-right">
      
      <ul class="nav nav-pills navbar-right">

        <li>
          <%= link_to 'Home', '#home' %>
        </li>
        <li>
          <%= link_to 'About', '#about' %>
        </li>
        <li>
          <%= link_to 'Services', '#services' %>
        </li>
        <li>
          <%= link_to 'Contact', '#contact' %>
        </li>
        
      </ul>

    </div>
  </div><!-- /.container-fluid -->
</nav>

<%= yield %>

</body>
</html>
